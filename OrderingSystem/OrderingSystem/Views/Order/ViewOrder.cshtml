@model OrderManage
@{
    ViewData["Title"] = "ViewOrder";
}
    <div>
        <div class="vertical-center">
            <div class="container h-100">
                <div class="col-12 text-center">
                    <h1 class="font-weight-light">View your order</h1>
                    <p class="lead">To view and edit your order, please use your name and the order number:</p>
                    <form method="post" asp-action="ViewOrder" asp-controller="Order">
                        <hr>
                        <div class="form-row mb-3">
                            <div class="col">
                                <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <input type="text" asp-for="OrderId" class="form-control" placeholder="Order Number">
                                <span asp-validation-for="OrderId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <button style="width:160px;" type="submit" class="btn btn-primary">View Order</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>